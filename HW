// 1. Вывести сумму чисел от 1 до N //
let number = 4;
let i = 0;
let summ = 0;
while (i <= number) {
    summ = summ + i;
    i = i + 1;
}

console.log(summ)
// 2. Вывести факториал числа N
let number = 4;
let i = 1;
let result = 1;
while (i <= number) {
    result = result * i;
    i = i + 1;
}

console.log(result)
// 3. Вывести четные и нечетные числа от 1 до 100 //

//let i;
for (let i = 1; i <= 100; i++)
    if (i % 2 == 0)
    {console.log(i)};